// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model user {
  uid      String @id
  userName String
  email    String @unique
}

model chat {
  chatId   String @id
  chatName String
}

model chatMember {
  memberId String @id
  // composite key formed by unique user/chat relationship
  uid      String
  chatId   String
}

model chatMessage {
  msgId    String   @id
  msgText  String
  sentDate DateTime
  // sentFrom
  fromUid  String
  // belongs to which chat
  chatId   String
}
